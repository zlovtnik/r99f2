# Google Analytics 4 Configuration
# Get your Measurement ID from Google Analytics console (format: G-XXXXXXXXXX)
# This is required for analytics tracking to work
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Site Configuration
# Public site URL for canonical links and SEO (without trailing slash)
PUBLIC_SITE_URL=https://lbsunrise.com
# Base site URL used by SEO utilities and sitemaps
VITE_SITE_URL=http://localhost:5173

# Business Contact
# Optional overrides for displayed business contact details
VITE_BUSINESS_EMAIL=contact@example.com
VITE_BUSINESS_PHONE=+1-978-555-1234

# Email Service Configuration
# API key for email service (required for contact form email delivery)
# Supported services: SendGrid, Mailgun, AWS SES, etc.
VITE_EMAIL_API_KEY=your-email-service-api-key-here

# Feature Flags (set to 'true' to enable, unset or any other value = disabled)
# Contact form functionality
VITE_ENABLE_CONTACT_FORM=true
# Service areas page and functionality
VITE_ENABLE_SERVICE_AREAS=true
# Testimonials section
VITE_ENABLE_TESTIMONIALS=true
# FAQ section
VITE_ENABLE_FAQ=true
# Analytics tracking
VITE_ENABLE_ANALYTICS=true
# Social sharing buttons
VITE_ENABLE_SOCIAL_SHARING=true
